{
	"name": "babylon",
	"private": true,
	"type": "module",
	"workspaces": {
		"packages": [
			"apps/*",
			"packages/*",
			"packages/core/*",
			"packages/shared/*"
		],
		"catalog": {
			"dotenv": "^17.2.2",
			"drizzle-orm": "0.44.2",
			"drizzle-kit": "0.31.2",
			"zod": "^4.1.12"
		}
	},
	"scripts": {
		"check": "biome check --write .",
		"prepare": "husky",
		"dev": "turbo dev",
		"build": "turbo build",
		"check-types": "turbo check-types",
		"docs:generate": "bun scripts/docs/generate_all_docs.ts",
		"dev:native": "turbo -F native dev",
		"dev:web": "turbo -F web dev",
		"dev:server": "turbo -F server dev",
		"db:push": "turbo -F @babylon/db db:push",
		"db:studio": "turbo -F @babylon/db db:studio",
		"db:generate": "turbo -F @babylon/db db:generate",
		"db:migrate": "turbo -F @babylon/db db:migrate"
	},
	"dependencies": {
		"dotenv": "^17.2.2",
		"zod": "^4.1.11"
	},
	"devDependencies": {
		"turbo": "^2.5.4",
		"@biomejs/biome": "^2.2.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.2",
		"@types/bun": "^1.2.6"
	},
	"lint-staged": {
		"*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
			"biome check --write ."
		]
	},
	"packageManager": "bun@1.3.0"
}
