{
	"name": "server",
	"main": "src/index.ts",
	"type": "module",
	"scripts": {
		"build": "tsdown",
		"check-types": "tsc -b",
		"compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
		"dev": "bun run --hot src/index.ts",
		"start": "bun run dist/index.js"
	},
	"dependencies": {
		"elysia": "^1.3.21",
		"@elysiajs/cors": "^1.3.3",
		"dotenv": "catalog:",
		"@babylon/api": "workspace:*",
		"@babylon/shared-infra": "workspace:*",
		"@babylon/shared-utils": "workspace:*"
	},
	"devDependencies": {
		"typescript": "^5.8.2",
		"@types/bun": "^1.2.6",
		"tsdown": "^0.16.5",
		"@babylon/config": "workspace:*"
	}
}
